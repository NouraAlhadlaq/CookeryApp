<h2><%= @recipe.title %></h2>
<h3>by: <%= link_to @recipe.user.username, user_path(@recipe.user)  %></h3>

<img src="<%= @recipe.image %>" alt="image">

<p><strong>prepare time: </strong><%= @recipe.preptime %></p>

<p><strong>serving: </strong><%= @recipe.serving %></p>

<ul>
<li>
<strong>Method:</strong> <br>  <%= @recipe.method %>
</li>
</ul>

<strong>Comments: </strong>
<% @recipe.comments.each do |comment| %>
<li>
<%= comment.name %>: <%= comment.body %> <%= link_to 'Remove comment', comment_path(comment), method: :delete %>
</li>
<% end %>

<h3>Add new comment</h3>
<%= render partial: 'comment_form' %>

<% if user_signed_in? %>
<% if current_user.id == @recipe.user.id %>
 <%= link_to 'Edit Recipe', edit_recipe_path %>
<%= link_to 'Remove Recipe', recipe_path, method: :delete %> 
<% end %>
<% end %>



