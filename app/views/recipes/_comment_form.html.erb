<%= form_for @recipe.comments.new do |f| %>

<%= f.label :body, "leave a comment" %> <br> <%= f.text_area :body %><br>
<%= hidden_field_tag "comment[recipe_id]", params[:id] %>
<% if user_signed_in? %>
<%= hidden_field_tag "comment[name]", current_user.username %>
<% else%> 
<%= hidden_field_tag "comment[name]", "Anonymous"%>
<% end %>
<%= f.submit %>
<% end %>