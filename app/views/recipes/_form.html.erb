<%= form_for @recipe do |f| %>
<div>
<%= f.label :title %> <br>
<%= f.text_field :title %>
</div>
<div>
<%= f.label :image %> <br>
<%= f.file_field :image %>
</div>
<div>
<%= f.label :preptime %> <br>
<%= f.text_field :preptime %>
</div>
<div>
<%= f.label :serving%> <br>
<%= f.text_field :serving %>
</div>
<div>
<%= f.label :ingredients%> <br>
<%= f.fields_for :ingredients do |ff| %>
  <div>
    <%= ff.label :quantity %>
    <%= ff.text_field :quantity %>
  </div>
  <div>
    <%= ff.label :name %>
    <%= ff.text_field :name %>
  </div>
<% end %>

<div>
<%= f.label :method %> <br>
<%= f.text_area :method %>
</div>

<%= f.submit %>
<% end %>
